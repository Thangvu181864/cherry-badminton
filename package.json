{
  "name": "monorepo-base",
  "version": "1.0.0",
  "description": "Repository for monorepo base",
  "author": "Thang Vu",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:clear": "npm run lint && npm run prettier && npm run check-types && npm run build",
    "compodoc": "npx compodoc -p ./tsconfig.doc.json",
    "compodoc:watch": "npx compodoc -p ./tsconfig.doc.json -s",
    "start": "nest start",
    "start:watch": "cross-env NODE_ENV=dev nest start --watch",
    "start:dev": "cross-env NODE_ENV=dev nest start",
    "start:test": "cross-env NODE_ENV=test DEBUG=true nest start",
    "start:prod": "cross-env NODE_ENV=prod node dist/src/main",
    "lint": "eslint .",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettier:check": "prettier -c \"{src,apps,libs,test}/**/*.ts\" ",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" && prettier -c \"{src,apps,libs,test}/**/*.ts\" ",
    "prettier": "prettier -c \"{src,apps,libs,test}/**/*.ts\" ",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "check-types": "tsc --pretty --noEmit",
    "pre-commit": "npm run lint && npm run prettier && npm run check-types",
    "prepare": "husky install",
    "migrate:create": "typeorm migration:create",
    "migrate:run": "typeorm migration:run -- -d ./src/migrations/ormconfig.migration.ts",
    "migrate:down": "typeorm migration:revert -- -d ./src/migrations/ormconfig.migration.ts"
  },
